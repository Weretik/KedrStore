@inherits LayoutComponentBase

@* Required *@
<MudThemeProvider Theme="@KedrTheme.Themetheme" IsDarkMode="false"/>
<MudPopoverProvider @rendermode="InteractiveAuto"/>
@* Needed for dialogs *@
<MudDialogProvider @rendermode="InteractiveAuto"/>
@* Needed for snackbars *@
<MudSnackbarProvider @rendermode="InteractiveAuto"/>

<MudLayout>

  <Header @rendermode="InteractiveServer"></Header>

  <MudMainContent >
    <MudContainer MaxWidth="MaxWidth.ExtraLarge">
      <HeaderSearchBar></HeaderSearchBar>
      @Body
    </MudContainer>
  </MudMainContent>

  <Footer></Footer>

</MudLayout>


