@using Presentation.UI.Pages.Catalog.Components
@page "/catalog"
@rendermode InteractiveServer

<PageTitle>Каталог</PageTitle>

<MudText Typo="Typo.h1" Class="mb-10">Каталог товарів</MudText>

<MudGrid Spacing="10">

  <MudItem xs="12" md="4">
    <MudStack Spacing="4">
        <Category @rendermode="InteractiveAuto"></Category>
        <PriceFilter @rendermode="InteractiveAuto"></PriceFilter>
    </MudStack>
  </MudItem>

  <MudItem xs="12" md="8">
      <ProductList @rendermode="InteractiveAuto"></ProductList>
  </MudItem>

</MudGrid>


