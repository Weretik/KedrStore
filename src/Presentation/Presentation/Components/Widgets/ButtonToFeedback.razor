@rendermode InteractiveServer
@inject IDialogService DialogService

<MudButton @onclick="OpenСontactDialogAsync"
           Variant="Variant.Outlined"
           Color="Color.Warning"
           Size="Size.Large"
           StartIcon="@Icons.Material.Filled.HeadsetMic">
    Отримати консультацію
</MudButton>

@code {
    private Task OpenСontactDialogAsync()
    {
        var options = new DialogOptions
        {
            CloseOnEscapeKey = true,
            MaxWidth = MaxWidth.Small,
            FullWidth = true
        };

        return DialogService.ShowAsync<СontactDialog>("Зворотній зв'язок", options);
    }
}
