{
    "ConnectionStrings": {
        "DefaultConnection": ""
    },
    "Identity": {
        "AdminUser": {
            "Email": "admin@example.com",
            "FullName": "Адміністратор системи",
            "DefaultPassword": "",
            "LockoutEnabled": false
        }
    },
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "Serilog": {
        "Using": ["Serilog.Sinks.Console"],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "System": "Warning"
            }
        },
        "Enrich": [
            "FromLogContext",
            "WithMachineName",
            "WithThreadId"
        ],
        "WriteTo": [
            {"Name": "Console"},
            {
                "Name": "Seq",
                "Args": {
                    "serverUrl": "http://localhost:5341"
                }
            }
        ]
    },
    "AllowedHosts": "*"
}
