@page "/information"

<MudTabs Elevation="2" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-6"
         ActivePanelIndex="_index">

  <MudTabPanel Text="Доставка" Icon="@Icons.Material.Filled.Api">
    <MudText>Информация о доставке...</MudText>
  </MudTabPanel>

  <MudTabPanel Text="Оплата">
    <MudText>Информация о Оплате...</MudText>
  </MudTabPanel>

  <MudTabPanel Text="Возврат">
    <MudText>Информация о Возврате...</MudText>
  </MudTabPanel>

</MudTabs>

@code {

  [SupplyParameterFromQuery(Name = "tab")]
  private string? Tab { get; set; }

  private int _index;

  protected override void OnInitialized()
  {
    _index = (Tab ?? "shipping").ToLowerInvariant() switch
      {
        "shipping" => 0,
        "payment" => 1,
        "returns" => 2,
        _ => 0
      };
  }

}
