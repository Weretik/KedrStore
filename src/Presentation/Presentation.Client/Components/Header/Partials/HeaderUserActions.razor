<div Class="d-flex justify-space-around flex-wrap">
  <MudIconButton Class="mx-2 my-4"
                 Icon="@Icons.Material.Filled.Favorite"
                 Size="Size.Large"
                 Color="Color.Inherit"
                 Variant="Variant.Outlined"/>

  <MudBadge  Class="mx-2 my-4"
             Color="Color.Primary"
             Content="5" Overlap="true">
    <MudIconButton Icon="@Icons.Material.Filled.ShoppingCart"
                   Size="Size.Large"
                   Color="Color.Inherit"
                   Variant="Variant.Outlined"/>
  </MudBadge>

  <MudMenu Class="mx-2 my-4"
           Icon="@Icons.Material.Filled.Person"
           Size="Size.Large"
           Color="Color.Inherit"
           Variant="Variant.Outlined"
           Dense="true"
           AriaLabel="Open user menu">
    <MudMenuItem Label="Профіль"/>
    <MudMenuItem Label="Мій аккаунт"/>
    <MudMenuItem Label="Вихід"/>
  </MudMenu>

</div>

<div>
  <MudIconButton Icon="@Icons.Material.Filled.Menu"
                 Size="Size.Large"
                 Color="Color.Inherit"
                 Variant="Variant.Text"
                 OnClick="@BurgerMenu.Toggle"/>
</div>

@code {
  private BurgerMenuState BurgerMenu => State.Get<BurgerMenuState>();
}
